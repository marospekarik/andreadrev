---
import { Image } from 'astro:assets';

const { title, url, description, pubDate, author, image, tags, year } = Astro.props;
---

<li>
  <a href={url} title={title} class="group">
    <article class="flex-1 h-full flex flex-col">
      <div class="block w-full lg:col-span-2 relative">
        <img class="aspect-[1/1] object-contain bg-center h-full w-full" src={image} alt={title} />
        <p
          class="text-gray-50 px-2 mt-2 font-display roboto-regular text-m absolute bottom-0 w-full bg-gray-950 bg-opacity-75"
        >
          {title}
          <span class="font-mono">
            {year}
          </span>
        </p>
      </div>
      <div class="flex flex-col items-start justify-between h-full flex-1 w-full p-4"></div>
    </article>
  </a>
</li>
