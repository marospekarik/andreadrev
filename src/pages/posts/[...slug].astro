export async function getStaticPaths() {
  // Retrieve blog entries
  const blogEntries = await getCollection('posts');

  // Retrieve collection folders
  const collections = fg.sync('src/assets/work/*', { onlyDirectories: true });

  // Map blog entries to routes
  const blogRoutes = blogEntries.map((entry) => {
    const dir = collections.find((collection) => collection.includes(entry.data.imageFolder));
    console.log(dir);
    const images = fg.sync(`${dir}/*.{png,jpg,webp,jpeg}`).map((img) => img.replace('src/', '/src/'));

    return {
      params: { slug: entry.slug },
      props: { entry, images },
    };
  });

  // Map collections to routes
